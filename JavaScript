document.addEventListener('DOMContentLoaded', function() {
    const mavzularData = {
        "6": {
            "Mavzulari": ["Yerning Harakati", "Geografik Koordinatalar"],
        },
        "7": {
            "Mavzulari": ["Yerning Harakati", "Oqimlar va Rivojlanish"],
        },
        "8": {
            "Mavzulari": ["Atmosfera", "Iklim turlari"],
        },
        "9": {
            "Mavzulari": ["Tabiat resurslari", "Energiya manbalarini ishlash"],
        },
        "10": {
            "Mavzulari": ["Biologik nifomatlar", "Tabiatni himoya qilish"],
        },
        "11": {
            "Mavzulari": ["Ekosistemalar", "Dengizlar va okeanlar"],
        }
    };

    const slaydlarData = {
        "6": {
            "Yerning Harakati": ["<a href='slides/yer_harakati.pdf'>Yerning harakati</a>", "<a href='slides/geografik_koordinatalar.pdf'>Geografik koordinatalar</a>"],
        },
        "7": {
            "Yerning Harakati": ["<a href='slides/yer_harakati.pdf'>Yerning harakati</a>", "<a href='slides/oqimlar.pdf'>Oqimlar va rivojlanish</a>"],
        },
        "8": {
            "Atmosfera": ["<a href='slides/atmosfera.pdf'>Atmosfera</a>", "<a href='slides/iklim_turlari.pdf'>Iklim turlari</a>"],
        },
        "9": {
            "Tabiat resurslari": ["<a href='slides/tabiat_resurslari.pdf'>Tabiat resurslari</a>", "<a href='slides/energiya_manbalarini.pdf'>Energiya manbalarini ishlash</a>"],
        },
        "10": {
            "Biologik nifomatlar": ["<a href='slides/biologik_nifomatlar.pdf'>Biologik nifomatlar</a>", "<a href='slides/tabiatni_himoya.pdf'>Tabiatni himoya qilish</a>"],
        },
        "11": {
            "Ekosistemalar": ["<a href='slides/ekosistemalar.pdf'>Ekosistemalar</a>", "<a href='slides/dengizlar_okeanlar.pdf'>Dengizlar va okeanlar</a>"],
        }
    };

    const xaritalarData = {
        "6": {
            "Geografik Koordinatalar": "<img src='images/geographic_coordinates.jpg' alt='Geografik koordinatalar xaritasi' />",
        },
        "7": {
            "Oqimlar va Rivojlanish": "<img src='images/oqimlar.jpg' alt='Oqimlar va rivojlanish xaritasi' />",
        },
        "8": {
            "Iklim Turlari": "<img src='images/iklim_turlari.jpg' alt='Iklim turlari xaritasi' />",
        },
        "9": {
            "Tabiat Resurslari": "<img src='images/tabiat_resurslari.jpg' alt='Tabiat resurslari xaritasi' />",
        },
        "10": {
            "Dunyo Ekosistemalari": "<img src='images/ekosistemalar.jpg' alt='Dunyo ekosistemalari xaritasi' />",
        },
        "11": {
            "Dengizlar va Okeanlar": "<img src='images/dengizlar_okeanlar.jpg' alt='Dengizlar va okeanlar xaritasi' />",
        }
    };

    const videolarData = {
        "6": {
            "Yerning Harakati": ["<a href='https://www.youtube.com/watch?v=XXXXXXX'>Yerning harakati</a>", "<a href='https://www.youtube.com/watch?v=XXXXXXX'>Geografik koordinatalar</a>"],
        },
        "7": {
            "Yerning Harakati": ["<a href='https://www.youtube.com/watch?v=XXXXXXX'>Yerning harakati</a>", "<a href='https://www.youtube.com/watch?v=XXXXXXX'>Oqimlar va rivojlanish</a>"],
        },
        "8": {
            "Atmosfera": ["<a href='https://www.youtube.com/watch?v=XXXXXXX'>Atmosfera</a>", "<a href='https://www.youtube.com/watch?v=XXXXXXX'>Iklim turlari</a>"],
        },
        "9": {
            "Tabiat resurslari": ["<a href='https://www.youtube.com/watch?v=XXXXXXX'>Tabiat resurslari</a>", "<a href='https://www.youtube.com/watch?v=XXXXXXX'>Energiya manbalarini ishlash</a>"],
        },
        "10": {
            "Biologik nifomatlar": ["<a href='https://www.youtube.com/watch?v=XXXXXXX'>Biologik nifomatlar</a>", "<a href='https://www.youtube.com/watch?v=XXXXXXX'>Tabiatni himoya qilish</a>"],
        },
        "11": {
            "Ekosistemalar": ["<a href='https://www.youtube.com/watch?v=XXXXXXX'>Ekosistemalar</a>", "<a href='https://www.youtube.com/watch?v=XXXXXXX'>Dengizlar va okeanlar</a>"],
        }
    };

    function loadMavzular(sinf) {
        const mavzularList = document.getElementById('mavzular-list');
        mavzularList.innerHTML = '';

        const mavzular = mavzularData[sinf]["Mavzulari"];
        mavzular.forEach(mavzu => {
            const li = document.createElement('li');
            li.textContent = mavzu;
            mavzularList.appendChild(li);
        });
    }

    function loadSlaydlar(sinf) {
        const slaydlarList = document.getElementById('slaydlar-list');
        slaydlarList.innerHTML = '';

        const slaydlar = slaydlarData[sinf];
        for (const mavzu in slaydlar) {
            const li = document.createElement('li');
            li.innerHTML = slaydlar[mavzu].join('<br>');
            slaydlarList.appendChild(li);
        }
    }

    function loadXaritalar(sinf) {
        const xaritalarContent = document.getElementById('xaritalar-content');
        xaritalarContent.innerHTML = '';

        const xaritalar = xaritalarData[sinf];
        for (const mavzu in xaritalar) {
            const div = document.createElement('div');
            div.innerHTML = xaritalar[mavzu];
            xaritalarContent.appendChild(div);
        }
    }

    function loadVideolar(sinf) {
        const videolarList = document.getElementById('videolar-list');
        videolarList.innerHTML = '';

        const videolar = videolarData[sinf]["Yerning Harakati"];
        videolar.forEach(video => {
            const li = document.createElement('li');
            li.innerHTML = video;
            videolarList.appendChild(li);
        });
    }

    // Example usage: load content for 6th grade initially
    loadMavzular("6");
    loadSlaydlar("6");
    loadXaritalar("6");
    loadVideolar("6");
});
